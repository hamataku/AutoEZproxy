{
  "manifest_version": 3,
  "name": "EZEZproxy",
  "description": "Auto reload pages through your EZproxy",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "all_frames": false,
      "run_at": "document_start",
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
